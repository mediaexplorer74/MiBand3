<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
      xmlns:activities="using:MiBandApp.ViewModels.Activities"  
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"  
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"  
      xmlns:local="using:MiBandApp.Views.Activities"  
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
      xmlns:micro="using:Caliburn.Micro"  
      x:Class="MiBandApp.Views.Activities.SleepDetailsPage"  
      IsTextScaleFactorEnabled="False">  

    <Page.Style>  
        <StaticResource ResourceKey="DefaultPageStyle" />  
    </Page.Style>  

    <Grid>  
        <!--Grid.Margin>  
            <StaticResource ResourceKey="RootContainerThickness" />  
        </Grid.Margin-->  
        <ScrollViewer VerticalScrollBarVisibility="Visible" VerticalScrollMode="Auto">  
            <StackPanel>  
                <StackPanel.Resources>  
                    <ResourceDictionary>  
                        <!-- Resource definitions remain unchanged -->  
                    </ResourceDictionary>  
                </StackPanel.Resources>  

                <StackPanel>  
                    <TextBlock>  
                        <TextBlock.Style>  
                            <StaticResource ResourceKey="AppTitleStyle" />  
                        </TextBlock.Style>  
                    </TextBlock>  
                    <TextBlock x:Uid="SleepDetailsPageTitle" Text="sleep">  
                        <TextBlock.Style>  
                            <StaticResource ResourceKey="PageTitleStyle" />  
                        </TextBlock.Style>  
                    </TextBlock>  
                </StackPanel>  

                <TextBlock IsTextScaleFactorEnabled="True">  
                    <TextBlock.Style>  
                        <StaticResource ResourceKey="SecondaryPageHeaderTextBlockStyle" />  
                    </TextBlock.Style>  
                    <TextBlock.Text>  
                        <!-- Use the Binding's Converter property directly instead of nested elements -->  
                        <Binding Path="Activity.TotalSleepMinutes" Converter="{StaticResource MinutesToStringConverter}" />  
                    </TextBlock.Text>  
                </TextBlock>  

                <!---TODO: charts  -->  

            </StackPanel>  
        </ScrollViewer>  
    </Grid>  
</Page>
