<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gregstoll="using:Gregstoll" 
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity" 
             xmlns:local="using:MiBandApp.Views.Activities" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="MiBandApp.Views.Activities.WalkingActivityView">
    <Grid>
        <Grid.ColumnDefinitions>               
            <ColumnDefinition Width="40px" />
            <ColumnDefinition />              
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>               
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />   
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemTimeTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Visibility>
                    <Binding Path="ShowOneTimestamp" Converter="{StaticResource BoolToVis}" ConverterParameter="False" />
                </TextBlock.Visibility>
                <TextBlock.Inlines>
                    <Run Text="{Binding Path=Activity.Begin, Converter={StaticResource StringFormatConverter}}" />
                    <Run Text="-" />
                    <Run Text="{Binding Path=Activity.End, Converter={StaticResource StringFormatConverter}}" />
                </TextBlock.Inlines>
            </TextBlock>
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemTimeTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Visibility>
                    <Binding Path="ShowOneTimestamp" Converter="{StaticResource BoolToVis}" />
                </TextBlock.Visibility>
                <TextBlock.Inlines>
                    <Run Text="{Binding Path=Activity.Begin, Converter={StaticResource StringFormatConverter}}" />
                </TextBlock.Inlines>
            </TextBlock>
        </StackPanel>
        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Height="30" Margin="0,0,10,0" VerticalAlignment="Center">
            <Image Source="/Resources/Images/walking2.png" Stretch="Uniform">
                <interactivity:Interaction.Behaviors>
                    <core:DataTriggerBehavior Value="True">
                        <core:DataTriggerBehavior.Binding>
                            <Binding Path="IsSmallWalk" />
                        </core:DataTriggerBehavior.Binding>
                        <!--core:Actions>
                            <core:ChangePropertyAction PropertyName="Height" Value="20" />
                        </core:Actions-->
                    </core:DataTriggerBehavior>
                </interactivity:Interaction.Behaviors>
            </Image>
        </Grid>
        <gregstoll:UniversalWrapPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemMainContentTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Inlines>
                    <Run x:Uid="WalkingActivity_WalkTitle" Text="Walking" />
                    <Run Text=": " />
                    <Run Text="{Binding Path=DurationMin, Converter={StaticResource MinutesToStringConverter}, ConverterParameter=short}" />
                </TextBlock.Inlines>
            </TextBlock>
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Inlines>
                    <Run x:Uid="WalkingActivitySteps" Text="Steps" />
                    <Run Text=": " />
                    <Run Text="{Binding Path=Activity.Steps, Converter={StaticResource StringFormatConverter}}" />
                </TextBlock.Inlines>
            </TextBlock>
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Text>
                    <Binding Path="Activity.Distance" Converter="{StaticResource DistanceKmToFormattedStringConverter}" />
                </TextBlock.Text>
            </TextBlock>
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Text>
                    <Binding Path="Activity.Calories" Converter="{StaticResource CaloriesToFormattedStringConverter}" />
                </TextBlock.Text>
            </TextBlock>
        </gregstoll:UniversalWrapPanel>
    </Grid>
</UserControl>
