<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gregstoll="using:Gregstoll" 
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity" 
             xmlns:local="using:MiBandApp.Views.Activities" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:micro="using:Caliburn.Micro" 
             x:Class="MiBandApp.Views.Activities.SleepingActivityView" 
             Attach="[Event Tapped] = [Action OnTapped()];">
    <UserControl.Content>
        <Grid>
            <ColumnDefinitions>
                <ColumnDefinitionCollection>
                    <ColumnDefinition Width="40px" />
                    <ColumnDefinition />
                </ColumnDefinitionCollection>
            </ColumnDefinitions>
            <Children>
                <UIElementCollection>
                    <BitmapIcon Row="0" Column="0" MinHeight="0" Margin="0,-2,10,-2" VerticalAlignment="Center" UriSource="../../Resources/Images/bed29.png" />
                    <StackPanel Column="1">
                        <Children>
                            <UIElementCollection>
                                <StackPanel Orientation="Horizontal">
                                    <Children>
                                        <UIElementCollection>
                                            <TextBlock>
                        <Style>
                          <StaticResource ResourceKey="ActivityItemTimeTextBlockStyle" />
                        </Style>
                        <Inlines>
                          <InlineCollection>
                            <Run>
                              <Text>
                                <Binding Path="Activity.BeginSleep" ConverterParameter="{0:t}">
                                  <Converter>
                                    <StaticResource ResourceKey="StringFormatConverter" />
                                  </Converter>
                                </Binding>
                              </Text>
                            </Run>
                            <Run Text="-" />
                            <Run>
                              <Text>
                                <Binding Path="Activity.EndSleep" ConverterParameter="{0:t}">
                                  <Converter>
                                    <StaticResource ResourceKey="StringFormatConverter" />
                                  </Converter>
                                </Binding>
                              </Text>
                            </Run>
                          </InlineCollection>
                        </Inlines>
                                            </TextBlock>
                                        </UIElementCollection>
                                    </Children>
                                </StackPanel>
                                <gregstoll:UniversalWrapPanel VerticalAlignment="Top" Orientation="Horizontal">
                                    <Children>
                                        <UIElementCollection>
                                            <TextBlock>
                        <Style>
                          <StaticResource ResourceKey="ActivityItemMainContentTextBlockStyle" />
                        </Style>
                        <Inlines>
                          <InlineCollection>
                            <Run x:Uid="SleepingActivityTitle" Text="Sleep" />
                            <Run Text=": " />
                            <Run>
                              <Text>
                                <Binding Path="Activity.TotalSleepMinutes">
                                  <Converter>
                                    <StaticResource ResourceKey="MinutesToStringConverter" />
                                  </Converter>
                                </Binding>
                              </Text>
                            </Run>
                          </InlineCollection>
                        </Inlines>
                                            </TextBlock>
                                            <TextBlock>
                        <Style>
                          <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                        </Style>
                        <Inlines>
                          <InlineCollection>
                            <Run x:Uid="SleepingActivityDeepSleep" Text="Deep sleep" />
                            <Run Text=": " />
                            <Run>
                              <Text>
                                <Binding Path="Activity.DeepSleepMin">
                                  <Converter>
                                    <StaticResource ResourceKey="MinutesToStringConverter" />
                                  </Converter>
                                </Binding>
                              </Text>
                            </Run>
                          </InlineCollection>
                        </Inlines>
                        <interactivity:Behaviors>
                          <interactivity:BehaviorCollection>
                            <core:DataTriggerBehavior Value="0">
                              <core:Binding>
                                <Binding Path="Activity.DeepSleepMin" />
                              </core:Binding>
                              <core:Actions>
                                <interactivity:ActionCollection>
                                  <core:ChangePropertyAction PropertyName="Visibility">
                                    <core:Value>
                                      <Visibility>Collapsed</Visibility>
                                    </core:Value>
                                  </core:ChangePropertyAction>
                                </interactivity:ActionCollection>
                              </core:Actions>
                            </core:DataTriggerBehavior>
                          </interactivity:BehaviorCollection>
                        </interactivity:Behaviors>
                                            </TextBlock>
                                            <TextBlock>
                        <Style>
                          <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                        </Style>
                        <Inlines>
                          <InlineCollection>
                            <Run x:Uid="SleepingActivityAwakenings" Text="Прокидань" />
                            <Run Text=": " />
                            <Run>
                              <Text>
                                <Binding Path="Activity.Awakenings" />
                              </Text>
                            </Run>
                          </InlineCollection>
                        </Inlines>
                        <interactivity:Behaviors>
                          <interactivity:BehaviorCollection>
                            <core:DataTriggerBehavior Value="0">
                              <core:Binding>
                                <Binding Path="Activity.Awakenings" />
                              </core:Binding>
                              <core:Actions>
                                <interactivity:ActionCollection>
                                  <core:ChangePropertyAction PropertyName="Visibility">
                                    <core:Value>
                                      <Visibility>Collapsed</Visibility>
                                    </core:Value>
                                  </core:ChangePropertyAction>
                                </interactivity:ActionCollection>
                              </core:Actions>
                            </core:DataTriggerBehavior>
                          </interactivity:BehaviorCollection>
                        </interactivity:Behaviors>
                                            </TextBlock>
                                        </UIElementCollection>
                                    </Children>
                                </gregstoll:UniversalWrapPanel>
                            </UIElementCollection>
                        </Children>
                    </StackPanel>
                </UIElementCollection>
            </Children>
        </Grid>
    </UserControl.Content>
</UserControl>
