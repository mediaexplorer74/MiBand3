<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:gregstoll="using:Gregstoll"  
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"  
             xmlns:local="using:MiBandApp.Views.Activities"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             xmlns:micro="using:Caliburn.Micro"  
             x:Class="MiBandApp.Views.Activities.SleepingActivityView">  

    <Grid>  
        <Grid.ColumnDefinitions>              
            <ColumnDefinition Width="40px" />  
            <ColumnDefinition />     
        </Grid.ColumnDefinitions>  
          
        <BitmapIcon Grid.Row="0" Grid.Column="0" MinHeight="0" Margin="0,-2,10,-2"   
                    VerticalAlignment="Center"   
                    UriSource="../../Resources/Images/bed29.png" />  
        <StackPanel Grid.Column="1">  
            <StackPanel Orientation="Horizontal">  
                <TextBlock>  
                    <TextBlock.Style>  
                        <StaticResource ResourceKey="ActivityItemTimeTextBlockStyle" />  
                    </TextBlock.Style>  
                    <TextBlock.Inlines>  
                        <Run>  
                            <Run.Text>  
                                <Binding Path="Activity.BeginSleep"  
                                         Converter="{StaticResource StringFormatConverter}" />  
                            </Run.Text>  
                        </Run>  
                        <Run Text="-" />  
                        <Run>  
                            <Run.Text>  
                                <Binding Path="Activity.EndSleep"  
                                         Converter="{StaticResource StringFormatConverter}" />  
                            </Run.Text>  
                        </Run>  
                    </TextBlock.Inlines>  
                </TextBlock>  
            </StackPanel>

            <StackPanel>
                <gregstoll:UniversalWrapPanel VerticalAlignment="Top" Orientation="Horizontal">  
                <TextBlock>  
                    <TextBlock.Style>  
                        <StaticResource ResourceKey="ActivityItemMainContentTextBlockStyle" />  
                    </TextBlock.Style>  
                    <TextBlock.Inlines>  
                        <Run x:Uid="SleepingActivityTitle" Text="Sleep" />  
                        <Run Text=": " />  
                        <Run>  
                            <Run.Text>  
                                <Binding Path="Activity.TotalSleepMinutes"  
                                         Converter="{StaticResource MinutesToStringConverter}" />  
                            </Run.Text>  
                        </Run>  
                    </TextBlock.Inlines>  
                </TextBlock> 
                
                <TextBlock>  
                    <TextBlock.Style>  
                        <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />  
                    </TextBlock.Style>  
                    <TextBlock.Inlines>  
                        <Run x:Uid="SleepingActivityDeepSleep" Text="Deep sleep" />  
                        <Run Text=": " />  
                        <Run>  
                            <Run.Text>  
                                <Binding Path="Activity.DeepSleepMin"  
                                         Converter="{StaticResource MinutesToStringConverter}" />  
                            </Run.Text>  
                        </Run>  
                    </TextBlock.Inlines>  
                    
                    <!-- TODO -->
                    <!--interactivity:Behaviors>  
                        <core:DataTriggerBehavior Value="0">  
                            <core:Binding>  
                                <Binding Path="Activity.DeepSleepMin" />  
                            </core:Binding>  
                            <core:Actions>  
                                <core:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />  
                            </core:Actions>  
                        </core:DataTriggerBehavior>  
                    </interactivity:Behaviors-->  
                </TextBlock>  
                <TextBlock>  
                    <TextBlock.Style>  
                        <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />  
                    </TextBlock.Style>  
                    <TextBlock.Inlines>  
                        <Run x:Uid="SleepingActivityAwakenings" Text="Прокидань" />  
                        <Run Text=": " />  
                        <Run>  
                            <Run.Text>  
                                <Binding Path="Activity.Awakenings" />  
                            </Run.Text>  
                        </Run>  
                    </TextBlock.Inlines>  
                    
                    <!-- TODO -->
                    <!--interactivity:Behaviors>  
                        <core:DataTriggerBehavior Value="0">  
                            <core:Binding>  
                                <Binding Path="Activity.Awakenings" />  
                            </core:Binding>  
                            <core:Actions>  
                                <core:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />  
                            </core:Actions>  
                        </core:DataTriggerBehavior>  
                    </interactivity:Behaviors-->  
                </TextBlock>  
            </gregstoll:UniversalWrapPanel>
          </StackPanel>
        </StackPanel>  
    </Grid>  
</UserControl>
