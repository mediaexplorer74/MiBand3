<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:activities="using:MiBandApp.ViewModels.Activities" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:MiBandApp.Views.Activities" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:micro="using:Caliburn.Micro"
             x:Class="MiBandApp.Views.Activities.ActivitiesListView" 
             HorizontalAlignment="Stretch" 
             HorizontalContentAlignment="Stretch"
    >
    <Grid>
        <StackPanel>
            <Children>
                <UIElementCollection>
                    <ListView Margin="0,0,0,-10" HorizontalAlignment="Stretch" IsSwipeEnabled="True">
                        <ItemsSource>
                            <Binding Path="ActivityItems" />
                        </ItemsSource>
                        <Resources>
                            <ResourceDictionary>
                                <Style TargetType="ListViewItem">
                                    <Setters>
                                        <SetterBaseCollection>
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <Setter Property="IsHoldingEnabled" Value="False" />
                                        </SetterBaseCollection>
                                    </Setters>
                                </Style>
                            </ResourceDictionary>
                        </Resources>
                        <ItemTemplate>
                            <DataTemplate>
                                <Template>
                                    <ContentControl Margin="0,10,0,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                        <micro:Model>
                                            <Binding />
                                        </micro:Model>
                                    </ContentControl>
                                </Template>
                            </DataTemplate>
                        </ItemTemplate>
                    </ListView>
                    <ToggleButton x:Uid="ActivitiesListViewShowShortButton" HorizontalAlignment="Center" BorderThickness="0,0,0,0" Content="show short items">
                        <IsChecked>
                            <Binding Path="ShowShortActivityItems" Mode="TwoWay" />
                        </IsChecked>
                        <Visibility>
                            <Binding Path="ActivityItemsCanBeShortened">
                                <Converter>
                                    <StaticResource ResourceKey="BoolToVis" />
                                </Converter>
                            </Binding>
                        </Visibility>
                    </ToggleButton>
                    <TextBlock x:Uid="ActivitiesListViewNothingToDisplay" Margin="0,10,0,10" HorizontalAlignment="Center" Text="No activities to display">
            <Style>
              <StaticResource ResourceKey="GrayTextBlockStyle" />
            </Style>
            <Visibility>
              <Binding Path="ActivityItemsEmpty">
                <Converter>
                  <StaticResource ResourceKey="BoolToVis" />
                </Converter>
              </Binding>
            </Visibility>
                    </TextBlock>
                </UIElementCollection>
            </Children>
        </StackPanel>
    </Grid>
</UserControl>
