<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:activities="using:MiBandApp.ViewModels.Activities" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:MiBandApp.Views.Activities" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:micro="using:Caliburn.Micro"
             x:Class="MiBandApp.Views.Activities.ActivitiesListView" 
             HorizontalAlignment="Stretch" 
             HorizontalContentAlignment="Stretch"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <ListView Margin="0,0,0,-10" HorizontalAlignment="Stretch" IsSwipeEnabled="True"
                      ItemsSource="{Binding ActivityItems}">
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="IsHoldingEnabled" Value="False" />
                    </Style>
                </ListView.Resources>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Margin="0,10,0,10" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                        Content="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ToggleButton x:Uid="ActivitiesListViewShowShortButton" HorizontalAlignment="Center" BorderThickness="0"
                          Content="show short items" IsChecked="{Binding ShowShortActivityItems, Mode=TwoWay}"
                          Visibility="{Binding ActivityItemsCanBeShortened, Converter={StaticResource BoolToVis}}" />
            <TextBlock x:Uid="ActivitiesListViewNothingToDisplay" Margin="0,10,0,10" HorizontalAlignment="Center"
                       Text="No activities to display" Style="{StaticResource GrayTextBlockStyle}"
                       Visibility="{Binding ActivityItemsEmpty, Converter={StaticResource BoolToVis}}" />
        </StackPanel>
    </Grid>
</UserControl>
