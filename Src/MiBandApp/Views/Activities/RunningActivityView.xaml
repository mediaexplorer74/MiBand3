<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gregstoll="using:Gregstoll" 
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity" 
             xmlns:local="using:MiBandApp.Views.Activities" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="MiBandApp.Views.Activities.RunningActivityView">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40px" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemTimeTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Inlines>
                    <Run Text="{Binding Path=Activity.Begin, Converter={StaticResource StringFormatConverter}}" />
                    <Run Text="-" />
                    <Run Text="{Binding Path=Activity.End, Converter={StaticResource StringFormatConverter}}" />
                </TextBlock.Inlines>
            </TextBlock>
        </StackPanel>

        <!-- Fix for XDG0049 and related issues -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" VerticalAlignment="Center">
            <BitmapIcon Height="30" Margin="0,0,10,0" UriSource="../../Resources/Images/run.png" />
            <interactivity:Interaction.Behaviors>
                <core:DataTriggerBehavior Binding="{Binding IsSmallRun}" Value="True">
                    <core:ChangePropertyAction TargetObject="{Binding ElementName=BitmapIcon}" PropertyName="Height" Value="20" />
                </core:DataTriggerBehavior>
            </interactivity:Interaction.Behaviors>
        </Grid>

        <gregstoll:UniversalWrapPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemMainContentTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Inlines>
                    <Run x:Uid="RunningActivity_Title" Text="Running" />
                    <Run Text=": " />
                    <Run Text="{Binding Path=DurationMin, Converter={StaticResource MinutesToStringConverter}, ConverterParameter=short}" />
                </TextBlock.Inlines>
            </TextBlock>
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Inlines>
                    <Run x:Uid="WalkingActivitySteps" Text="Steps" />
                    <Run Text=": " />
                    <Run Text="{Binding Path=Activity.Steps, Converter={StaticResource StringFormatConverter}}" />
                </TextBlock.Inlines>
            </TextBlock>
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Text>
                    <Binding Path="Activity.Distance" Converter="{StaticResource DistanceKmToFormattedStringConverter}" />
                </TextBlock.Text>
            </TextBlock>
            <TextBlock>
                <TextBlock.Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                </TextBlock.Style>
                <TextBlock.Text>
                    <Binding Path="Activity.Calories" Converter="{StaticResource CaloriesToFormattedStringConverter}" />
                </TextBlock.Text>
            </TextBlock>
        </gregstoll:UniversalWrapPanel>
    </Grid>
</UserControl>
