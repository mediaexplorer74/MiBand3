<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:core="using:Microsoft.Xaml.Interactions.Core" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gregstoll="using:Gregstoll" 
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity" 
             xmlns:local="using:MiBandApp.Views.Activities" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="MiBandApp.Views.Activities.RunningActivityView">
    <Grid>
        <Grid>
            <ColumnDefinitions>
                <ColumnDefinitionCollection>
                    <ColumnDefinition Width="40px" />
                    <ColumnDefinition />
                </ColumnDefinitionCollection>
            </ColumnDefinitions>
            <RowDefinitions>
                <RowDefinitionCollection>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </RowDefinitionCollection>
            </RowDefinitions>
            <Children>
                <UIElementCollection>
                    <StackPanel Row="0" Column="1" Orientation="Horizontal">
                        <Children>
                            <UIElementCollection>
                                <TextBlock>
                  <Style>
                    <StaticResource ResourceKey="ActivityItemTimeTextBlockStyle" />
                  </Style>
                  <Inlines>
                    <InlineCollection>
                      <Run>
                        <Text>
                          <Binding Path="Activity.Begin" ConverterParameter="{0:t}">
                            <Converter>
                              <StaticResource ResourceKey="StringFormatConverter" />
                            </Converter>
                          </Binding>
                        </Text>
                      </Run>
                      <Run Text="-" />
                      <Run>
                        <Text>
                          <Binding Path="Activity.End" ConverterParameter="{0:t}">
                            <Converter>
                              <StaticResource ResourceKey="StringFormatConverter" />
                            </Converter>
                          </Binding>
                        </Text>
                      </Run>
                    </InlineCollection>
                  </Inlines>
                                </TextBlock>
                            </UIElementCollection>
                        </Children>
                    </StackPanel>
                    <BitmapIcon Row="0" RowSpan="2" Column="0" Height="30" Margin="0,0,10,0" VerticalAlignment="Center" UriSource="../../Resources/Images/run.png">
                        <interactivity:Behaviors>
                            <interactivity:BehaviorCollection>
                                <core:DataTriggerBehavior Value="True">
                                    <core:Binding>
                                        <Binding Path="IsSmallRun" />
                                    </core:Binding>
                                    <core:Actions>
                                        <interactivity:ActionCollection>
                                            <core:ChangePropertyAction PropertyName="Height" Value="20" />
                                        </interactivity:ActionCollection>
                                    </core:Actions>
                                </core:DataTriggerBehavior>
                            </interactivity:BehaviorCollection>
                        </interactivity:Behaviors>
                    </BitmapIcon>
                    <gregstoll:UniversalWrapPanel Row="1" Column="1" Orientation="Horizontal">
                        <Children>
                            <UIElementCollection>
                                <TextBlock>
                  <Style>
                    <StaticResource ResourceKey="ActivityItemMainContentTextBlockStyle" />
                  </Style>
                  <Inlines>
                    <InlineCollection>
                      <Run x:Uid="RunningActivity_Title" Text="Running" />
                      <Run Text=": " />
                      <Run>
                        <Text>
                          <Binding Path="DurationMin" ConverterParameter="short">
                            <Converter>
                              <StaticResource ResourceKey="MinutesToStringConverter" />
                            </Converter>
                          </Binding>
                        </Text>
                      </Run>
                    </InlineCollection>
                  </Inlines>
                                </TextBlock>
                                <TextBlock>
                  <Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                  </Style>
                  <Inlines>
                    <InlineCollection>
                      <Run x:Uid="WalkingActivitySteps" Text="Steps" />
                      <Run Text=": " />
                      <Run>
                        <Text>
                          <Binding Path="Activity.Steps" ConverterParameter="{0}">
                            <Converter>
                              <StaticResource ResourceKey="StringFormatConverter" />
                            </Converter>
                          </Binding>
                        </Text>
                      </Run>
                    </InlineCollection>
                  </Inlines>
                                </TextBlock>
                                <TextBlock>
                  <Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                  </Style>
                  <Text>
                    <Binding Path="Activity.Distance">
                      <Converter>
                        <StaticResource ResourceKey="DistanceKmToFormattedStringConverter" />
                      </Converter>
                    </Binding>
                  </Text>
                                </TextBlock>
                                <TextBlock>
                  <Style>
                    <StaticResource ResourceKey="ActivityItemSecondaryWrappableTextBlockStyle" />
                  </Style>
                  <Text>
                    <Binding Path="Activity.Calories">
                      <Converter>
                        <StaticResource ResourceKey="CaloriesToFormattedStringConverter" />
                      </Converter>
                    </Binding>
                  </Text>
                                </TextBlock>
                            </UIElementCollection>
                        </Children>
                    </gregstoll:UniversalWrapPanel>
                </UIElementCollection>
            </Children>
        </Grid>
    </Grid>
</UserControl>
