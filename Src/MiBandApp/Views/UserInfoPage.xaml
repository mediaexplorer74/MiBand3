<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:cal="using:Caliburn.Micro" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:pickers="using:MiBandApp.Controls.Pickers" 
      x:Class="MiBandApp.Views.UserInfoPage">
    <Page.IsEnabled>
        <Binding Path="IsPageEnabled" />
    </Page.IsEnabled>
    <Page.Style>
        <StaticResource ResourceKey="DefaultPageStyle" />
    </Page.Style>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>               
                    <ResourceDictionary Source="/Resources/SpecificStyles.xaml" />              
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.Content>
        <Grid>
            <!--Grid.Margin>
                <StaticResource ResourceKey="RootContainerThickness" />
            </Grid.Margin-->
            <Grid.RowDefinitions>               
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />       
            </Grid.RowDefinitions>
            
            <StackPanel>
              <StackPanel Grid.Row="0">
                <Grid>
                 <TextBlock>
                  <TextBlock.Style>
                    <StaticResource ResourceKey="AppTitleStyle" />
                  </TextBlock.Style>
                    </TextBlock>
                    
                    
                    <!--RnD -->
                    <TextBlock x:Uid="UserInfoPageTitle" Text="profile">
                        <!--TextBlock x:Uid="UserInfoPageTitle" Text="profile" 
                        Attach="[Event DoubleTapped] = [Action OnHeaderDoubleTapped()];"-->
                   <TextBlock.Style>
                    <StaticResource ResourceKey="PageTitleStyle" />
                  </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                    </StackPanel>
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Visible" 
                                  VerticalScrollMode="Enabled">
                        <Grid>
                            <StackPanel>
                            <Grid>
                                <TextBox x:Uid="UserInfoPageName" Header="Name or nickname" 
                                         PlaceholderText="Thor, for example">
                                    <TextBox.Text>
                                        <Binding Path="Info.Name" Mode="TwoWay" />
                                    </TextBox.Text>
                                </TextBox>
                                <ComboBox x:Uid="UserInfoPageGender" Header="Gender">
                                    <ComboBox.SelectedIndex>
                                        <Binding Path="GenderIndex" Mode="TwoWay" />
                                    </ComboBox.SelectedIndex>
                                    <ComboBox.Items>

                                        <ComboBoxItem x:Uid="UserInfoPageMale" Content="Male" />
                                        <ComboBoxItem x:Uid="UserInfoPageFemale" Content="Female" />

                                    </ComboBox.Items>
                                </ComboBox>

                                <!--DatePicker x:Uid="UserInfoPageBirthday" Header="Birthday">
                                            <Date>
                                                <Binding Path="Info.Birthday" Mode="TwoWay" />
                                            </Date>
                                            <MaxYear>
                                                <Binding Path="MaxBirthdayTime" />
                                            </MaxYear>
                                            <MinYear>
                                                <Binding Path="MinBirthdayTime" />
                                            </MinYear>
                                        </DatePicker-->
                                <TextBlock x:Uid="UserInfoPageHeight">
                                    <TextBlock.Style>
                                        <StaticResource ResourceKey="ImprovedControlHeaderTextBlockStyle" />
                                    </TextBlock.Style>
                                    <TextBlock.Inlines>
                                        <!--InlineCollection implicititems="Height" /-->
                                        <Run Text="Height"/>
                                    </TextBlock.Inlines>
                                </TextBlock>
                                <pickers:HeightPicker>
                                    <!--pickers:Value>
                            <Binding Path="Height" Mode="TwoWay" />
                        </pickers:Value-->
                                </pickers:HeightPicker>
                                <TextBlock x:Uid="UserInfoPageWeight">
                                    <TextBlock.Style>
                                        <StaticResource ResourceKey="ImprovedControlHeaderTextBlockStyle" />
                                    </TextBlock.Style>
                                    <TextBlock.Inlines>
                                        <Run Text="Weight" />
                                        <!--InlineCollection implicititems="Weight" /-->
                                    </TextBlock.Inlines>
                                </TextBlock>
                                <pickers:WeightPicker>
                                    <!--pickers:Value>
                                                <Binding Path="Weight" Mode="TwoWay" />
                                            </pickers:Value-->
                                </pickers:WeightPicker>
                                <TextBlock x:Uid="UserInfoPageGoal">
                                    <TextBlock.Style>
                                        <StaticResource ResourceKey="ImprovedControlHeaderTextBlockStyle" />
                                    </TextBlock.Style>
                                    <TextBlock.Inlines>
                                        <!--InlineCollection implicititems="Daily goal" /-->
                                        <Run Text="Daily goal"/>
                                    </TextBlock.Inlines>
                                </TextBlock>
                                <pickers:StepsGoalPicker>
                                    <!--pickers:Value>
                                <Binding Path="GoalSteps" Mode="TwoWay" />
                            </pickers:Value-->
                                </pickers:StepsGoalPicker>
                                <TextBlock x:Uid="UserInfoPageSleepGoal">
                                    <TextBlock.Style>
                                        <StaticResource ResourceKey="ImprovedControlHeaderTextBlockStyle" />
                                    </TextBlock.Style>
                                    <TextBlock.Inlines>
                                        <!--InlineCollection implicititems="Sleep goal" /-->
                                        <Run Text="Sleep goal"/>
                                    </TextBlock.Inlines>
                                </TextBlock>
                                <pickers:SleepGoalPicker>
                                    <!--pickers:Value>
                                            <Binding Path="GoalSleepMinutes" Mode="TwoWay" />
                                        </pickers:Value-->
                                </pickers:SleepGoalPicker>
                            </Grid>
                        </StackPanel>
                        </Grid>
                    </ScrollViewer>
                    <TextBlock Grid.Row="2" VerticalAlignment="Bottom">
            <TextBlock.Style>
              <ThemeResource ResourceKey="GrayTextBlockStyle" />
            </TextBlock.Style>
            <TextBlock.Inlines>             
                <Run Text="← " />
                <Run x:Uid="PressBackButton" Text="Press back button when you are done." />           
             </TextBlock.Inlines>
             </TextBlock>
           </StackPanel>
        </Grid>
    </Page.Content>
</Page>

