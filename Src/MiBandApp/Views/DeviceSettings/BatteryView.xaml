<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="using:MiBandApp.Views.DeviceSettings" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="MiBandApp.Views.DeviceSettings.BatteryView">
    <StackPanel>
        <Grid>
            <TextBlock x:Uid="DevicePageBatteryChargeHeader" Style="{StaticResource ControlHeaderTextBlockStyle}">
                <TextBlock.Inlines>
                    <Run Text="Battery charge" />
                </TextBlock.Inlines>
            </TextBlock>
            <TextBlock FontSize="40">
                <TextBlock.Text>
                    <Binding Path="BatteryInfo.ChargedPercent"/>
                </TextBlock.Text>
            </TextBlock>
        </Grid>
        <Grid>
            <StackPanel Visibility="{Binding BatteryInfo.IsCharging, Converter={StaticResource BoolToVis}, ConverterParameter=False}">
                <TextBlock x:Uid="DevicePageLastChargedHeader" HorizontalAlignment="Right" Style="{StaticResource ControlHeaderTextBlockStyle}">
                    <TextBlock.Inlines>
                        <Run Text="Last charged" />
                    </TextBlock.Inlines>
                </TextBlock>
                <TextBlock HorizontalAlignment="Right" Style="{StaticResource BaseTextBlockStyle}" Text="{Binding BatteryInfo.LastCharged}" />
            </StackPanel>
            <TextBlock x:Uid="DevicePage_ChargingNow" Margin="0,0,0,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                       Style="{StaticResource ControlHeaderTextBlockStyle}" Visibility="{Binding BatteryInfo.IsCharging, Converter={StaticResource BoolToVis}}">
                <TextBlock.Inlines>
                    <Run Text="charging now" />
                </TextBlock.Inlines>
            </TextBlock>
        </Grid>
        <ProgressBar Maximum="100" Minimum="0" Value="{Binding BatteryInfo.ChargedPercent}" />
    </StackPanel>
</UserControl>
