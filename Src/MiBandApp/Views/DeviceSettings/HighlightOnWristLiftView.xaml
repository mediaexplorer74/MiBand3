<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="MiBandApp.Views.DeviceSettings.HighlightOnWristLiftView"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock x:Uid="DevicePage_HighlightDisplayOnWristLift" 
                       Margin="0,0,0,-10" 
                       Text="Highlight display on wrist lift" 
                       Style="{StaticResource GrayTextBlockStyle}" />
            <ToggleSwitch x:Uid="SettingsPageToggleSwitch" 
                          OffContent="Disabled" 
                          OnContent="Enabled" 
                          IsOn="{Binding Path=IsHighlightOnWristLiftEnabled, Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>

