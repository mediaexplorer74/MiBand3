<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:local="using:MiBandApp.Views.DeviceSettings"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             x:Class="MiBandApp.Views.DeviceSettings.GoalReachedNotificationView">  
    <Grid>  
        <StackPanel>  
            <TextBlock x:Uid="DevicePage_GoalReachedNotification_Header" Margin="0,0,0,-10"  
                       Text="Show notification on band when goal is reached"  
                       Style="{StaticResource GrayTextBlockStyle}" />  
            <ToggleSwitch x:Uid="SettingsPageToggleSwitch" OffContent="Disabled"  
                          OnContent="Enabled"  
                          IsOn="{Binding Path=IsGoalReachedNotificationEnabled, Mode=TwoWay}" />  
        </StackPanel>  
    </Grid>  
</UserControl>
