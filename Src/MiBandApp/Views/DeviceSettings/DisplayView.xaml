<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:deviceSettings="using:MiBandApp.ViewModels.DeviceSettings" 
             xmlns:local="using:MiBandApp.Views.DeviceSettings" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:micro="using:Caliburn.Micro" 
             x:Class="MiBandApp.Views.DeviceSettings.DisplayView" 
             x:Name="Root">
    <UserControl.Content>
        <StackPanel>
            <Children>
                <UIElementCollection>
                    <TextBlock x:Uid="DevicePage_DisplaySettings" Margin="0,0,0,10">
            <Style>
              <StaticResource ResourceKey="ControlHeaderTextBlockStyle" />
            </Style>
            <Inlines>
              <InlineCollection implicititems="Display settings" />
            </Inlines>
                    </TextBlock>
                    <StackPanel x:ConnectionId="1" IsHitTestVisible="False" IsTapEnabled="False" Orientation="Horizontal">
                        <Background>
                            <StaticResource ResourceKey="AppBackgroundBrush" />
                        </Background>
                        <Resources>
                            <ResourceDictionary>
                                <Style TargetType="BitmapIcon">
                                    <Setters>
                                        <SetterBaseCollection>
                                            <Setter Property="Height" Value="30" />
                                            <Setter Property="Opacity" Value="0.8" />
                                            <Setter Property="IsHitTestVisible" Value="False" />
                                            <Setter Property="Margin" Value="0,0,10,10" />
                                        </SetterBaseCollection>
                                    </Setters>
                                </Style>
                            </ResourceDictionary>
                        </Resources>
                        <Children>
                            <UIElementCollection>
                                <BitmapIcon UriSource="../../Resources/Images/clock.png" />
                                <BitmapIcon UriSource="../../Resources/Images/iconmonstr-calendar-5-240.png">
                                    <Visibility>
                                        <Binding Path="IsDateShown">
                                            <Converter>
                                                <StaticResource ResourceKey="BoolToVis" />
                                            </Converter>
                                        </Binding>
                                    </Visibility>
                                </BitmapIcon>
                                <BitmapIcon UriSource="../../Resources/Images/footsteps.png">
                                    <Visibility>
                                        <Binding Path="DisplayItems[0]">
                                            <Converter>
                                                <StaticResource ResourceKey="BoolToVis" />
                                            </Converter>
                                        </Binding>
                                    </Visibility>
                                </BitmapIcon>
                                <BitmapIcon UriSource="../../Resources/Images/road-with-two-placeholders.png">
                                    <Visibility>
                                        <Binding Path="DisplayItems[1]">
                                            <Converter>
                                                <StaticResource ResourceKey="BoolToVis" />
                                            </Converter>
                                        </Binding>
                                    </Visibility>
                                </BitmapIcon>
                                <BitmapIcon UriSource="../../Resources/Images/calories.png">
                                    <Visibility>
                                        <Binding Path="DisplayItems[2]">
                                            <Converter>
                                                <StaticResource ResourceKey="BoolToVis" />
                                            </Converter>
                                        </Binding>
                                    </Visibility>
                                </BitmapIcon>
                                <BitmapIcon UriSource="../../Resources/Images/heart305.png">
                                    <Visibility>
                                        <Binding Path="DisplayItems[3]">
                                            <Converter>
                                                <StaticResource ResourceKey="BoolToVis" />
                                            </Converter>
                                        </Binding>
                                    </Visibility>
                                </BitmapIcon>
                                <BitmapIcon UriSource="../../Resources/Images/half-battery.png">
                                    <Visibility>
                                        <Binding Path="DisplayItems[4]">
                                            <Converter>
                                                <StaticResource ResourceKey="BoolToVis" />
                                            </Converter>
                                        </Binding>
                                    </Visibility>
                                </BitmapIcon>
                            </UIElementCollection>
                        </Children>
                    </StackPanel>
                    <TextBlock x:Uid="DevicePage_DisplaySettingsTip" x:ConnectionId="2" IsTapEnabled="False">
            <Foreground>
              <StaticResource ResourceKey="AppAccentBrush" />
            </Foreground>
            <Style>
              <StaticResource ResourceKey="ControlHeaderTextBlockStyle" />
            </Style>
            <Inlines>
              <InlineCollection implicititems="Tap to change displayed items" />
            </Inlines>
                    </TextBlock>
                    <ContentDialog x:Uid="DevicePage_ChooseDisplayItemsDialog" x:Name="DisplayItemsContentDialog" Title="Choose display items" VerticalAlignment="Stretch" Attach="[Event Closed] = [Action SaveDisplayItems()]" PrimaryButtonText="ok">
                        <MaxWidth>
                            <Binding Path="ActualWidth" ElementName="Root" />
                        </MaxWidth>
                        <Content>
                            <StackPanel>
                                <Children>
                                    <UIElementCollection>
                                        <CheckBox x:Uid="DevicePage_DisplayItemTime" Content="Time" IsChecked="False" IsEnabled="True" />
                                        <CheckBox x:Uid="DevicePage_DisplayItemDate" Content="Date">
                                            <IsChecked>
                                                <Binding Path="IsDateShown" Mode="TwoWay" />
                                            </IsChecked>
                                            <Visibility>
                                                <Binding Path="IsDateAvailable">
                                                    <Converter>
                                                        <StaticResource ResourceKey="BoolToVis" />
                                                    </Converter>
                                                </Binding>
                                            </Visibility>
                                        </CheckBox>
                                        <CheckBox x:Uid="DevicePage_DisplayItemSteps" Content="Steps">
                                            <IsChecked>
                                                <Binding Path="DisplayItems[0]" Mode="TwoWay" />
                                            </IsChecked>
                                        </CheckBox>
                                        <CheckBox x:Uid="DevicePage_DisplayItemDistance" Content="Distance">
                                            <IsChecked>
                                                <Binding Path="DisplayItems[1]" Mode="TwoWay" />
                                            </IsChecked>
                                        </CheckBox>
                                        <CheckBox x:Uid="DevicePage_DisplayItemCalories" Content="Calories burnt">
                                            <IsChecked>
                                                <Binding Path="DisplayItems[2]" Mode="TwoWay" />
                                            </IsChecked>
                                        </CheckBox>
                                        <CheckBox x:Uid="DevicePage_DisplayItemHeartRate" Content="Heart rate">
                                            <IsChecked>
                                                <Binding Path="DisplayItems[3]" Mode="TwoWay" />
                                            </IsChecked>
                                        </CheckBox>
                                        <CheckBox x:Uid="DevicePage_DisplayItemBattery" Content="Battery">
                                            <IsChecked>
                                                <Binding Path="DisplayItems[4]" Mode="TwoWay" />
                                            </IsChecked>
                                        </CheckBox>
                                    </UIElementCollection>
                                </Children>
                            </StackPanel>
                        </Content>
                    </ContentDialog>
                </UIElementCollection>
            </Children>
        </StackPanel>
    </UserControl.Content>
</UserControl>
