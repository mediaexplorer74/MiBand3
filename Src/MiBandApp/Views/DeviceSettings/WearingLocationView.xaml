<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:MiBandApp.Views.DeviceSettings"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="MiBandApp.Views.DeviceSettings.WearingLocationView">
    <UserControl.Content>
        <StackPanel>
            <TextBlock x:Uid="DevicePageWearLocationHeader" Margin="0,0,0,10"
                       Style="{StaticResource ControlHeaderTextBlockStyle}">
                Wear location
            </TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="RadioButton">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="IsTextScaleFactorEnabled" Value="False" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="RadioButton">
                                    <Grid>
                                        <ToggleButton Height="70" Margin="0,-10,0,-10" HorizontalAlignment="Stretch" BorderThickness="0"
                                                      IsHitTestVisible="True" IsChecked="{TemplateBinding IsChecked}">
                                            <ContentPresenter Content="{TemplateBinding Content}" />
                                        </ToggleButton>
                                        <Border Background="Transparent" />
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>
                <RadioButton x:Uid="DevicePageLeftHand" Grid.Column="0" Content="left hand" GroupName="WearLocation"
                             IsChecked="{Binding Path=WearLocation, ConverterParameter=1, Mode=TwoWay, Converter={StaticResource FlaggedEnumToBool}}" />
                <RadioButton x:Uid="DevicePageNeck" Grid.Column="1" Content="neck" GroupName="WearLocation"
                             IsChecked="{Binding Path=WearLocation, ConverterParameter=4, Mode=TwoWay, Converter={StaticResource FlaggedEnumToBool}}" />
                <RadioButton x:Uid="DevicePageRightHand" Grid.Column="2" Content="right hand" GroupName="WearLocation"
                             IsChecked="{Binding Path=WearLocation, ConverterParameter=2, Mode=TwoWay, Converter={StaticResource FlaggedEnumToBool}}" />
            </Grid>
        </StackPanel>
    </UserControl.Content>
</UserControl>