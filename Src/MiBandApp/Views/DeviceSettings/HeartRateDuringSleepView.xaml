<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             x:Class="MiBandApp.Views.DeviceSettings.HeartRateDuringSleepView">
    <UserControl.Content>
        <StackPanel>
            <Children>
                <UIElementCollection>
                    <TextBlock x:Uid="DevicePageMeasureHeartRateDuringSleepHeader" 
                               Margin="0,0,0,-10" Text="Measure heart rate during sleep">
            <Style>
              <ThemeResource ResourceKey="GrayTextBlockStyle" />
            </Style>
                    </TextBlock>
                    <ToggleSwitch x:Uid="SettingsPageToggleSwitch" OffContent="Disabled" 
                                  OnContent="Enabled">
                        <IsOn>
                            <Binding Path="IsHeartRateDuringSleepEnabled" Mode="TwoWay" />
                        </IsOn>
                    </ToggleSwitch>
                </UIElementCollection>
            </Children>
        </StackPanel>
    </UserControl.Content>
</UserControl>

