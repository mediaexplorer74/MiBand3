<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="using:MiBandApp.Views.DeviceSettings" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:micro="using:Caliburn.Micro" 
             x:Class="MiBandApp.Views.DeviceSettings.LedsColorView">
    <Resources>
        <ResourceDictionary>
            <MergedDictionaries>
                <ResourceDictionaryCollection>
                    <ResourceDictionary Source="../../Resources/SpecificStyles.xaml" />
                </ResourceDictionaryCollection>
            </MergedDictionaries>
        </ResourceDictionary>
    </Resources>
    <UserControl.Content>
        <StackPanel>
            <Children>
                <UIElementCollection>
                    <TextBlock x:Uid="DevicePageLedsColorHeader">
            <Style>
              <StaticResource ResourceKey="ControlHeaderTextBlockStyle" />
            </Style>
            <Inlines>
              <InlineCollection implicititems="LEDs color theme" />
            </Inlines>
                    </TextBlock>
                    <ListBox Attach="[Event SelectionChanged] = [Action OnColorThemeChanged($eventArgs)];" BorderThickness="0,0,0,0" SelectionMode="Single">
                        <Background>
                            <StaticResource ResourceKey="AppBackgroundBrush" />
                        </Background>
                        <IsEnabled>
                            <Binding Path="IsColorChangingNotInProgress" />
                        </IsEnabled>
                        <ItemsSource>
                            <Binding Path="ColorThemes" />
                        </ItemsSource>
                        <SelectedIndex>
                            <Binding Path="ColorThemeIndex" />
                        </SelectedIndex>
                        <Style>
                            <StaticResource ResourceKey="HorizontallyScrolledListBoxStyle" />
                        </Style>
                        <ItemsPanel>
                            <ItemsPanelTemplate>
                                <Template>
                                    <VirtualizingStackPanel Orientation="Horizontal" />
                                </Template>
                            </ItemsPanelTemplate>
                        </ItemsPanel>
                        <ItemTemplate>
                            <DataTemplate>
                                <Template>
                                    <Grid>
                                        <Children>
                                            <UIElementCollection>
                                                <Border Width="40" Height="40" BorderThickness="1,1,1,1">
                                                    <Background>
                                                        <Binding Path="DisplayColor" />
                                                    </Background>
                                                    <BorderBrush>
                                                        <StaticResource ResourceKey="AppBackgroundBrush" />
                                                    </BorderBrush>
                                                </Border>
                                            </UIElementCollection>
                                        </Children>
                                    </Grid>
                                </Template>
                            </DataTemplate>
                        </ItemTemplate>
                    </ListBox>
                    <TextBlock x:Uid="DevicePageLedsColorHint" Margin="5,0,5,5" Text="Select LEDs color and check how it looks on your band.">
            <FontSize>
              <StaticResource ResourceKey="TextStyleSmallFontSize" />
            </FontSize>
            <Style>
              <ThemeResource ResourceKey="GrayTextBlockStyle" />
            </Style>
                    </TextBlock>
                </UIElementCollection>
            </Children>
        </StackPanel>
    </UserControl.Content>
</UserControl>
