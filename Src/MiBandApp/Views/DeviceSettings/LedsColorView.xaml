<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:local="using:MiBandApp.Views.DeviceSettings"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             xmlns:micro="using:Caliburn.Micro"  
             x:Class="MiBandApp.Views.DeviceSettings.LedsColorView"  
             mc:Ignorable="d">  

    <UserControl.Resources>  
        <ResourceDictionary>  
            <ResourceDictionary.MergedDictionaries>  
                <ResourceDictionary Source="/Resources/SpecificStyles.xaml" />  
            </ResourceDictionary.MergedDictionaries>  
        </ResourceDictionary>  
    </UserControl.Resources>  

    <StackPanel>  
        <TextBlock x:Uid="DevicePageLedsColorHeader"  
                   Style="{StaticResource ControlHeaderTextBlockStyle}">  
            <Run Text="LEDs color theme" />  
        </TextBlock>  
        <ListBox BorderThickness="0"  
                 SelectionMode="Single"  
                 Background="{StaticResource AppBackgroundBrush}"  
                 IsEnabled="{Binding IsColorChangingNotInProgress}"  
                 ItemsSource="{Binding ColorThemes}"  
                 SelectedIndex="{Binding ColorThemeIndex}"  
                 Style="{StaticResource HorizontallyScrolledListBoxStyle}"  
                 SelectionChanged="OnColorThemeChanged">  
            <ListBox.ItemsPanel>  
                <ItemsPanelTemplate>  
                    <VirtualizingStackPanel Orientation="Horizontal" />  
                </ItemsPanelTemplate>  
            </ListBox.ItemsPanel>  
            <ListBox.ItemTemplate>  
                <DataTemplate>  
                    <Grid>  
                        <Border Width="40" Height="40" BorderThickness="1"  
                                Background="{Binding DisplayColor}"  
                                BorderBrush="{StaticResource AppBackgroundBrush}" />  
                    </Grid>  
                </DataTemplate>  
            </ListBox.ItemTemplate>  
        </ListBox>  
        <TextBlock x:Uid="DevicePageLedsColorHint"  
                   Margin="5,0,5,5"  
                   Text="Select LEDs color and check how it looks on your band."  
                   FontSize="{StaticResource TextStyleSmallFontSize}"  
                   Style="{ThemeResource GrayTextBlockStyle}" />  
    </StackPanel>  
</UserControl>
