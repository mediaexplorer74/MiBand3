<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:micro="using:Caliburn.Micro" 
      xmlns:vm="using:MiBandApp.ViewModels" 
      x:Class="MiBandApp.Views.DevicePage" 
      x:Name="PageRoot">
    <Page.IsEnabled>
        <Binding Path="IsPageEnabled" />
    </Page.IsEnabled>
    <Page.Style>
        <StaticResource ResourceKey="DefaultPageStyle" />
    </Page.Style>
    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal">
            <CommandBar.SecondaryCommands>              
                    <AppBarButton x:Uid="DevicePageLocate" x:Name="LocateBand" Label="locate" />
                    <AppBarButton x:Uid="DevicePage_Reboot" x:Name="TryReboot" Label="reboot" />
                    <AppBarButton x:Uid="DevicePageUnbind" x:Name="TryUnbind" Label="unbind" />             
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    
    <Grid>
        <Grid>
            <!--Grid.Margin>
                <StaticResource ResourceKey="RootContainerThickness" />
            </Grid.Margin-->
            <Grid.RowDefinitions>         
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <StackPanel>
                    <StackPanel Grid.Row="0">
                     <Grid>
                         <Grid>
                         <StackPanel>
                        <TextBlock>
                        <TextBlock.Style>
                          <StaticResource ResourceKey="AppTitleStyle" />
                        </TextBlock.Style>
                       </TextBlock>
                       <TextBlock HorizontalAlignment="Right">
                        <TextBlock.Style>
                          <StaticResource ResourceKey="AppTitleStyle" />
                        </TextBlock.Style>
                        <TextBlock.Text>
                          <Binding Path="DeviceName" />
                        </TextBlock.Text>
                                </TextBlock>
                     </StackPanel>
                   </Grid>
                
                  <TextBlock x:Uid="DevicePageTitle" Text="device">
                  <TextBlock.Style>
                    <StaticResource ResourceKey="PageTitleStyle" />
                  </TextBlock.Style>
                 </TextBlock>
                </Grid>
                </StackPanel>
             <ScrollViewer x:Name="PageScrollViewer" Grid.Row="1" 
                           VerticalScrollBarVisibility="Visible" 
                           VerticalScrollMode="Enabled">
                    <ScrollViewer.Content>
                            <ItemsControl Margin="0,5,0,10" 
                                          HorizontalAlignment="Stretch" 
                                          HorizontalContentAlignment="Stretch">
                              <ItemsControl.ItemsSource>
                                    <Binding Path="SettingItems" />
                                </ItemsControl.ItemsSource>
                            <ItemsControl.ItemTemplate>
                              <DataTemplate>
                                    <ContentControl Margin="0,0,0,30" 
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch" 
                                                    HorizontalContentAlignment="Stretch" 
                                                    VerticalContentAlignment="Stretch">
                                        <!--micro:Model>
                                                <Binding />
                                            </micro:Model-->
                                    </ContentControl>

                                </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer.Content>
             </ScrollViewer>
            
            <TextBlock Grid.Row="2" VerticalAlignment="Bottom">
            <TextBlock.Style>
              <ThemeResource ResourceKey="GrayTextBlockStyle" />
            </TextBlock.Style>
              <TextBlock.Inlines>              
                <Run Text="← " />
                <Run x:Uid="PressBackButton" Text="Press back button when you are done." />              
            </TextBlock.Inlines>
         </TextBlock>
         </StackPanel>
      </Grid>
    </Grid>
</Page>
