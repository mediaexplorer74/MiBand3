<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:micro="using:Caliburn.Micro" 
      xmlns:vm="using:MiBandApp.ViewModels" 
      x:Class="MiBandApp.Views.DevicePage" 
      x:Name="PageRoot">
    <Page.IsEnabled>
        <Binding Path="IsPageEnabled" />
    </Page.IsEnabled>
    <Page.Style>
        <StaticResource ResourceKey="DefaultPageStyle" />
    </Page.Style>
    <Page.BottomAppBar>
        <CommandBar ClosedDisplayMode="Minimal">
            <SecondaryCommands>
                <CommandBarElementCollection>
                    <AppBarButton x:Uid="DevicePageLocate" x:Name="LocateBand" Label="locate" />
                    <AppBarButton x:Uid="DevicePage_Reboot" x:Name="TryReboot" Label="reboot" />
                    <AppBarButton x:Uid="DevicePageUnbind" x:Name="TryUnbind" Label="unbind" />
                </CommandBarElementCollection>
            </SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    
    <Grid>
        <Grid>
            <Margin>
                <StaticResource ResourceKey="RootContainerThickness" />
            </Margin>
            <RowDefinitions>
                <RowDefinitionCollection>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </RowDefinitionCollection>
            </RowDefinitions>
            <Children>
                <UIElementCollection>
                    <StackPanel Row="0">
                        <Children>
                            <UIElementCollection>
                                <Grid>
                                    <Children>
                                        <UIElementCollection>
                                            <TextBlock>
                        <Style>
                          <StaticResource ResourceKey="AppTitleStyle" />
                        </Style>
                                            </TextBlock>
                                            <TextBlock HorizontalAlignment="Right">
                        <Style>
                          <StaticResource ResourceKey="AppTitleStyle" />
                        </Style>
                        <Text>
                          <Binding Path="DeviceName" />
                        </Text>
                                            </TextBlock>
                                        </UIElementCollection>
                                    </Children>
                                </Grid>
                                <TextBlock x:Uid="DevicePageTitle" Text="device">
                  <Style>
                    <StaticResource ResourceKey="PageTitleStyle" />
                  </Style>
                                </TextBlock>
                            </UIElementCollection>
                        </Children>
                    </StackPanel>
                    <ScrollViewer x:Name="PageScrollViewer" Row="1" VerticalScrollBarVisibility="Visible" VerticalScrollMode="Enabled">
                        <Content>
                            <ItemsControl Margin="0,5,0,10,0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                                <ItemsSource>
                                    <Binding Path="SettingItems" />
                                </ItemsSource>
                                <ItemTemplate>
                                    <DataTemplate>
                                        <Template>
                                            <ContentControl Margin="0,0,0,30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                                                <micro:Model>
                                                    <Binding />
                                                </micro:Model>
                                            </ContentControl>
                                        </Template>
                                    </DataTemplate>
                                </ItemTemplate>
                            </ItemsControl>
                        </Content>
                    </ScrollViewer>
                    <TextBlock Row="2" VerticalAlignment="Bottom">
            <Style>
              <ThemeResource ResourceKey="GrayTextBlockStyle" />
            </Style>
            <Inlines>
              <InlineCollection>
                <Run Text="← " />
                <Run x:Uid="PressBackButton" Text="Press back button when you are done." />
              </InlineCollection>
            </Inlines>
                    </TextBlock>
                </UIElementCollection>
            </Children>
        </Grid>
    </Grid>
</Page>
