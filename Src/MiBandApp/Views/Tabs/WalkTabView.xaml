<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
             xmlns:controls="using:MiBandApp.Controls"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:local="using:MiBandApp.Views.Tabs"  
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             xmlns:micro="using:Caliburn.Micro"  
             xmlns:tabs="using:MiBandApp.ViewModels.Tabs"  
             x:Class="MiBandApp.Views.Tabs.WalkTabView">  
    <UserControl.Content>  
        <StackPanel x:Name="WalkGrid" HorizontalAlignment="Center" Background="{StaticResource AppBackgroundBrush}">  
            <Grid>  
                <TextBlock HorizontalAlignment="Center"  
                           VerticalAlignment="Bottom"  
                           FontSize="15"  
                           Style="{StaticResource GrayBigTextBlockStyle}">  
                    <Run x:Uid="WalkTabGoalHeader" Text="Goal" />  
                    <Run Text=": " />  
                    <Run Text="{Binding Path=GoalInfo.StepsGoal, Converter={StaticResource StringFormatConverter}, ConverterParameter='0 steps'}" />  
                </TextBlock>  
            </Grid>  
        </StackPanel>  
    </UserControl.Content>  
</UserControl>