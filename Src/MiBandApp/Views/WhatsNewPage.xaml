<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="using:MiBandApp.Views" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:services="using:MiBandApp.Services" 
      xmlns:viewModels="using:MiBandApp.ViewModels" 
      x:Class="MiBandApp.Views.WhatsNewPage">
    <Page.Style>
        <StaticResource ResourceKey="DefaultPageStyle" />
    </Page.Style>
    <Page.Resources>
        <ResourceDictionary>
            <MergedDictionaries>
                <ResourceDictionaryCollection>
                    <ResourceDictionary Source="../Resources/SpecificStyles.xaml" />
                </ResourceDictionaryCollection>
            </MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Page.Content>
        <Grid>
            <Margin>
                <StaticResource ResourceKey="RootContainerThickness" />
            </Margin>
            <Resources>
                <ResourceDictionary>
                    <Style x:Key="SectionHeaderTextBlockStyle" TargetType="TextBlock">
                        <BasedOn>
                            <StaticResource ResourceKey="ControlHeaderTextBlockStyle" />
                        </BasedOn>
                        <Setters>
                            <SetterBaseCollection>
                                <Setter Property="FontSize" Value="25" />
                            </SetterBaseCollection>
                        </Setters>
                    </Style>
                    <Style x:Key="SectionBodyTextBlockStyle" TargetType="TextBlock">
                        <BasedOn>
                            <StaticResource ResourceKey="BodyTextBlockStyle" />
                        </BasedOn>
                        <Setters>
                            <SetterBaseCollection>
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="Margin" Value="12,0,0,10" />
                            </SetterBaseCollection>
                        </Setters>
                    </Style>
                    <Style x:Key="SectionNoteTextBlockStyle" TargetType="TextBlock">
                        <Setters>
                            <SetterBaseCollection>
                                <Setter Property="FontSize">
                                    <Value>
                                        <StaticResource ResourceKey="TextStyleSmallFontSize" />
                                    </Value>
                                </Setter>
                                <Setter Property="Margin" Value="12,-5,0,10" />
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </SetterBaseCollection>
                        </Setters>
                    </Style>
                    <Style TargetType="HyperlinkButton">
                        <BasedOn>
                            <StaticResource ResourceKey="DefaultHyperlinkButtonStyle" />
                        </BasedOn>
                        <Setters>
                            <SetterBaseCollection>
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="Margin" Value="12,0,0,10" />
                            </SetterBaseCollection>
                        </Setters>
                    </Style>
                </ResourceDictionary>
            </Resources>
            <RowDefinitions>
                <RowDefinitionCollection>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </RowDefinitionCollection>
            </RowDefinitions>
            <Children>
                <UIElementCollection>
                    <StackPanel Row="0">
                        <Children>
                            <UIElementCollection>
                                <TextBlock>
                  <Style>
                    <StaticResource ResourceKey="AppTitleStyle" />
                  </Style>
                                </TextBlock>
                                <TextBlock x:Uid="WhatsNewPageTitle" Text="what's new">
                  <Style>
                    <StaticResource ResourceKey="PageTitleStyle" />
                  </Style>
                                </TextBlock>
                            </UIElementCollection>
                        </Children>
                    </StackPanel>
                    <Grid Row="1">
                        <RowDefinitions>
                            <RowDefinitionCollection>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </RowDefinitionCollection>
                        </RowDefinitions>
                        <Children>
                            <UIElementCollection>
                                <ListView>
                                    <ItemTemplate>
                                        <StaticResource ResourceKey="UpdateHistoryItemDataTemplate" />
                                    </ItemTemplate>
                                    <ItemsSource>
                                        <Binding Path="Updates" />
                                    </ItemsSource>
                                </ListView>
                                <Border Row="1" BorderThickness="0,2,0,0">
                                    <BorderBrush>
                                        <ThemeResource ResourceKey="AppForegroundDisabledBrush" />
                                    </BorderBrush>
                                    <Child>
                                        <TextBlock Margin="0,10,0,10" FontSize="18" LineHeight="30" TextAlignment="Left">
                      <Style>
                        <StaticResource ResourceKey="GrayBigTextBlockStyle" />
                      </Style>
                      <Text>
                        <Binding Path="LastMessage" />
                      </Text>
                                        </TextBlock>
                                    </Child>
                                </Border>
                                <Button x:Uid="WhatsNewPageSkipButton" x:Name="Skip" Row="3" HorizontalAlignment="Right" Content="ok, cool!" />
                            </UIElementCollection>
                        </Children>
                    </Grid>
                </UIElementCollection>
            </Children>
        </Grid>
    </Page.Content>
</Page>
