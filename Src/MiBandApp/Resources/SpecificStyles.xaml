                                                    </VisualTransitionCollection>
                                                </Transitions>
                                                <States>
                                                    <VisualStateCollection>
                                                        <VisualState x:Name="NoMultiSelect" />
                                                        <VisualState x:Name="ListMultiSelect">
                                                            <DeferredStoryboard>
                                                                <Storyboard>
                                                                    <Children>
                                                                        <TimelineCollection>
                                                                            <DoubleAnimation TargetName="CheckboxContainerTranslateTransform" TargetProperty="X" To="0" Duration="0" />
                                                                            <DoubleAnimation TargetName="ContentBorderTranslateTransform" TargetProperty="X" Duration="0">
                                                                                <To>
                                                                                    <ThemeResource ResourceKey="ListViewItemContentTranslateX" />
                                                                                </To>
                                                                            </DoubleAnimation>
                                                                        </TimelineCollection>
                                                                    </Children>
                                                                </Storyboard>
                                                            </DeferredStoryboard>
                                                        </VisualState>
                                                        <VisualState x:Name="GridMultiSelect">
                                                            <DeferredStoryboard>
                                                                <Storyboard>
                                                                    <Children>
                                                                        <TimelineCollection>
                                                                            <DoubleAnimation TargetName="SelectedBorder" TargetProperty="Opacity" To="1" Duration="0" />
                                                                        </TimelineCollection>
                                                                    </Children>
                                                                </Storyboard>
                                                            </DeferredStoryboard>
                                                        </VisualState>
                                                    </VisualStateCollection>
                                                </States>
                                            </VisualStateGroup>
                                            <VisualStateGroup x:Name="ReorderModeStates">
