                                                            <DeferredStoryboard>
                                                                <Storyboard>
                                                                    <Children>
                                                                        <TimelineCollection>
                                                                            <DragOverThemeAnimation Direction="Bottom" TargetName="ReorderHintContent">
                                                                                <ToOffset>
                                                                                    <ThemeResource ResourceKey="ListViewItemReorderHintThemeOffset" />
                                                                                </ToOffset>
                                                                            </DragOverThemeAnimation>
                                                                        </TimelineCollection>
                                                                    </Children>
                                                                </Storyboard>
                                                            </DeferredStoryboard>
                                                        </VisualState>
                                                        <VisualState x:Name="RightReorderHint">
                                                            <DeferredStoryboard>
                                                                <Storyboard>
                                                                    <Children>
                                                                        <TimelineCollection>
                                                                            <DragOverThemeAnimation Direction="Right" TargetName="ReorderHintContent">
                                                                                <ToOffset>
                                                                                    <ThemeResource ResourceKey="ListViewItemReorderHintThemeOffset" />
                                                                                </ToOffset>
                                                                            </DragOverThemeAnimation>
                                                                        </TimelineCollection>
                                                                    </Children>
                                                                </Storyboard>
                                                            </DeferredStoryboard>
                                                        </VisualState>
                                                        <VisualState x:Name="TopReorderHint">
                                                            <DeferredStoryboard>
                                                                <Storyboard>
                                                                    <Children>
                                                                        <TimelineCollection>
                                                                            <DragOverThemeAnimation Direction="Top" ToOffset="0" TargetName="ReorderHintContent" />
                                                                        </TimelineCollection>
                                                                    </Children>
                                                                </Storyboard>
                                                            </DeferredStoryboard>
                                                        </VisualState>
                                                        <VisualState x:Name="LeftReorderHint">
