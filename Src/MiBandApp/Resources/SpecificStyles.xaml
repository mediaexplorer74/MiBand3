                                                                        </TimelineCollection>
                                                                    </Children>
                                                                </Storyboard>
                                                            </DeferredStoryboard>
                                                        </VisualState>
                                                        <VisualState x:Name="Reorderable">
                                                            <DeferredStoryboard>
                                                                <Storyboard>
                                                                    <Children>
                                                                        <TimelineCollection>
                                                                            <DoubleAnimationUsingKeyFrames TargetName="ContentScaleTransform" TargetProperty="ScaleX">
                                                                                <KeyFrames>
                                                                                    <DoubleKeyFrameCollection>
                                                                                        <LinearDoubleKeyFrame KeyTime="0,075" Value="1,05" />
                                                                                        <LinearDoubleKeyFrame KeyTime="0,2" Value="1" />
                                                                                    </DoubleKeyFrameCollection>
                                                                                </KeyFrames>
                                                                            </DoubleAnimationUsingKeyFrames>
                                                                            <DoubleAnimationUsingKeyFrames TargetName="ContentScaleTransform" TargetProperty="ScaleY">
                                                                                <KeyFrames>
                                                                                    <DoubleKeyFrameCollection>
                                                                                        <LinearDoubleKeyFrame KeyTime="0,075" Value="1,05" />
                                                                                        <LinearDoubleKeyFrame KeyTime="0,2" Value="1" />
                                                                                    </DoubleKeyFrameCollection>
                                                                                </KeyFrames>
                                                                            </DoubleAnimationUsingKeyFrames>
                                                                        </TimelineCollection>
                                                                    </Children>
                                                                </Storyboard>
                                                            </DeferredStoryboard>
                                                        </VisualState>
                                                        <VisualState x:Name="ReorderDisabled" />
                                                    </VisualStateCollection>
                                                </States>
                                            </VisualStateGroup>
                                            <VisualStateGroup x:Name="ReorderHintStates">
                                                <Transitions>
