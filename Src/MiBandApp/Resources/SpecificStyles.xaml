                                                    <VisualTransitionCollection>
                                                        <VisualTransition GeneratedDuration="0,2" From="ReorderEnabled" To="ReorderDisabled" />
                                                    </VisualTransitionCollection>
                                                </Transitions>
                                                <States>
                                                    <VisualStateCollection>
                                                        <VisualState x:Name="ReorderEnabled">
