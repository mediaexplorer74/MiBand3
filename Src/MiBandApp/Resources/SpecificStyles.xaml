                                                                <Storyboard>
                                                                    <Children>
                                                                        <TimelineCollection>
                                                                            <ObjectAnimationUsingKeyFrames TargetName="PlaceholderTextBlock" TargetProperty="Visibility" Duration="0">
                                                                                <KeyFrames>
                                                                                    <ObjectKeyFrameCollection>
                                                                                        <DiscreteObjectKeyFrame KeyTime="0" Value="Visible" />
