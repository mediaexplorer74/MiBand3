                                                        <VisualTransition GeneratedDuration="0,2" To="NoReorderHint" />
                                                    </VisualTransitionCollection>
                                                </Transitions>
                                                <States>
                                                    <VisualStateCollection>
                                                        <VisualState x:Name="NoReorderHint" />
