<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="PickerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="LightGray" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="DarkGray" />
    </Style>

    <Style x:Key="PickerTitleTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Thickness x:Key="PickerListSelectorMargin">5,5,5,5</Thickness>
    <Thickness x:Key="PickerListSelectorItemContentMargin">2,2,2,2</Thickness>

    <Style x:Key="PickerMainTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="TextAlignment" Value="Center" />
    </Style>

    <Style x:Key="ListViewItemWithNoPressedAnimationStyle" 
           TargetType="ListViewItem">
        <Style.Setters>            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="OuterContainer" RenderTransformOrigin="0.5,0.5">
                            <Grid x:Name="ReorderHintContent" Background="Transparent">
                                <Border x:Name="CheckboxTiltContainer" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Border.Margin>
                                        <ThemeResource ResourceKey="ListViewItemMultiselectCheckBoxMargin" />
                                    </Border.Margin>
                                    <Border x:Name="CheckboxOuterContainer">
                                        <Border.Clip>
                                            <RectangleGeometry Rect="0,0,25.5,25.5" />
                                        </Border.Clip>
                                        <Grid x:Name="CheckboxContainer">
                                            <Grid.RenderTransform>
                                                <TranslateTransform x:Name="CheckboxContainerTranslateTransform">
                                                    <TranslateTransform.X>
                                                        <ThemeResource ResourceKey="ListViewItemContentOffsetX" />
                                                    </TranslateTransform.X>
                                                </TranslateTransform>
                                            </Grid.RenderTransform>
                                            <Rectangle x:Name="NormalRectangle" Width="25.5" Height="25.5">
                                                <Rectangle.Fill>
                                                    <ThemeResource ResourceKey="CheckBoxBackgroundThemeBrush" />
                                                </Rectangle.Fill>
                                                <Rectangle.Stroke>
                                                    <ThemeResource ResourceKey="CheckBoxBorderThemeBrush" />
                                                </Rectangle.Stroke>
                                                <Rectangle.StrokeThickness>
                                                    <ThemeResource ResourceKey="CheckBoxBorderThemeThickness" />
                                                </Rectangle.StrokeThickness>
                                            </Rectangle>
                                            <Path x:Name="CheckGlyph" Width="18.5" Height="17" HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  Data="M0,123 L39,93 L124,164 L256,18 L295,49 L124,240 z" 
                                                  FlowDirection="LeftToRight" IsHitTestVisible="True" 
                                                  Opacity="0" Stretch="Fill" StrokeLineJoin="Round" StrokeThickness="2.5">
                                                <Path.Fill>
                                                    <ThemeResource ResourceKey="CheckBoxForegroundThemeBrush" />
                                                </Path.Fill>
                                            </Path>
                                        </Grid>
                                    </Border>
                                </Border>
                                <Border x:Name="ContentContainer">
                                    <Border x:Name="TiltContainer">
                                        <Border x:Name="ContentBorder">
                                            <Border.RenderTransform>
                                                <TranslateTransform x:Name="ContentBorderTranslateTransform" />
                                            </Border.RenderTransform>
                                            <Grid>
                                                 <TextBlock x:Name="PlaceholderTextBlock" IsHitTestVisible="True" Opacity="0" Text="Xg">
                                                   
                                                </TextBlock>
                                                <Rectangle x:Name="PlaceholderRect" IsHitTestVisible="True" Visibility="Collapsed">
                                                    <Rectangle.Fill>
                                                        <ThemeResource ResourceKey="ListViewItemPlaceholderBackgroundThemeBrush" />
                                                    </Rectangle.Fill>
                                                </Rectangle>
                                            </Grid>
                                        </Border>
                                    </Border>
                                </Border>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                   
                </Setter.Value>
            </Setter> 
        </Style.Setters>
    </Style>

    <DataTemplate x:Key="UpdateHistoryItemDataTemplate">
        <!--Template-->
            <StackPanel Margin="0,0,12,20">
             <Grid>
              <TextBlock FontSize="25">
              <TextBlock.Style>
                <ThemeResource ResourceKey="ControlHeaderTextBlockStyle" />
              </TextBlock.Style>
              <TextBlock.Inlines>
               
                  <Run x:Uid="UpdateItemVersionTitle" Text="version" />
                  <Run>
                    <Run.Text>
                      <Binding Path="Version" />
                    </Run.Text>
                  </Run>
                
              </TextBlock.Inlines>
                    </TextBlock>
                    <TextBlock Margin="12,12,0,10" FontSize="20">
              <!--TextBlock.FontFamily>
                <StaticResource ResourceKey="PhoneFontFamilyLight" />
              </TextBlock.FontFamily-->
              <TextBlock.Style>
                <StaticResource ResourceKey="BodyTextBlockStyle" />
              </TextBlock.Style>
              <TextBlock.Text>
                <Binding Path="Description" />
                </TextBlock.Text>
               </TextBlock>
             </Grid>
            </StackPanel>
        <!--/Template-->
    </DataTemplate>
</ResourceDictionary>
