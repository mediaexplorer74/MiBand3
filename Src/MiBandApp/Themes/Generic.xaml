<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
               xmlns:controls="using:MiBandApp.Controls">  

    <SolidColorBrush x:Key="PhoneBackgroundColor" Color="#FFFFFF" />  
    <SolidColorBrush x:Key="PhoneForegroundColor" Color="#000000" />  
    <SolidColorBrush x:Key="PhoneDisabledColor" Color="#A9A9A9" />  

    <Style x:Key="ControlHeaderTextBlockStyle" TargetType="TextBlock">  
        <Setter Property="FontSize" Value="16" />  
        <Setter Property="FontWeight" Value="Bold" />  
    </Style>  
    <Style x:Key="BodyTextBlockStyle" TargetType="TextBlock">  
        <Setter Property="FontSize" Value="14" />  
        <Setter Property="FontWeight" Value="Normal" />  
    </Style>  
    <Style x:Key="GroupHeaderTextBlockStyle" TargetType="TextBlock">  
        <Setter Property="FontSize" Value="16" />  
        <!--Setter Property="FontWeight" Value="SemiBold" /-->
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>  

    <!-- App colors -->  
    <SolidColorBrush x:Key="AppForegroundBrush" Color="#F0F0F0" />
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#101010" />
    <SolidColorBrush x:Key="AppAccentBrush" Color="#F000F0" />
    <SolidColorBrush x:Key="AppForegroundDisabledBrush" Color="#F080F0" />
    <!--RootContainerThickness x:Key="0,0,0,0" /-->

</ResourceDictionary>

