<UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:controls="using:Ian.Controls" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="using:MiBandApp.Controls.Pickers" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    x:Class="MiBandApp.Controls.Pickers.WeightPicker" 
    x:Name="Root" Height="60" HorizontalAlignment="Stretch">
    
    <Grid>
        <Button x:Name="MainButton"
                Width="{Binding ActualWidth, ElementName=Root}"
                Height="{Binding ActualHeight, ElementName=Root}"
                Style="{StaticResource PickerButtonStyle}">
            <Button.Flyout>
                <controls:ListSelectorFlyout x:Name="OptionsFlyout" ConfirmationButtonsVisible="False">
                    <controls:ListSelectorFlyout.Content>
                        <Grid>
                            <TextBlock x:Uid="UserInfoPageWeight"
                                       Style="{StaticResource PickerTitleTextBlockStyle}">
                                <Run Text="Weight" />
                            </TextBlock>
                            <controls:ListSelector x:Name="OptionsListSelector" ItemWidth="150"
                                                   Margin="{StaticResource PickerListSelectorMargin}">
                                <controls:ListSelector.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Bottom"
                                                    Margin="{StaticResource PickerListSelectorItemContentMargin}">
                                            <TextBlock Style="{StaticResource PickerMainTextBlockStyle}"
                                                       Text="{Binding KgString, Mode=OneTime}" />
                                            <TextBlock Style="{StaticResource PickerSecondaryTextBlockStyle}"
                                                       Text="{Binding ImperialString, Mode=OneTime}"
                                                       Visibility="{Binding ImperialLabelVisibility, Mode=OneTime}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </controls:ListSelector.ItemTemplate>
                            </controls:ListSelector>
                        </Grid>
                    </controls:ListSelectorFlyout.Content>
                </controls:ListSelectorFlyout>
            </Button.Flyout>
        </Button>
    </Grid>
</UserControl>
